startup_message off

# more buffer
defscrollback 1000

# session name
backtick 0 30 30 sh -c 'screen -ls | grep --color=no -o "$PPID\.\S\+" | sed "s/^[^.]*\.//"'

# <session name> | <current window>  <other windows>
caption always
caption string "%L>%{= kr} %` %{d}| %{=b kY}%n%f %t%{= kc}  %LW%<"

# move between screens
bindkey "^J" next
bindkey "^K" prev

# C-a is useful
escape ^zZ

# login shell
defshell -bash
